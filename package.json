{
  "name": "controls",
  "private": false,
  "version": "0.0.1",
  "scripts": {
    "build": "browserify ./src/jquery-controls.coffee > ./dist/jq-controls.js",
    "watch": "watchify ./src/jquery-controls.coffee -o ./dist/jq-controls.js",
    "test": "npm run lint && testling",
    "build-test": "browserify ./spec/controls-spec.coffee -o ./spec/jq-controls-spec.js",
    "lint": "coffeelint src/*.coffee"
  },
  "browserify": {
    "basedir": "./",
    "transform": [
      "coffeeify",
      "brfs"
    ]
  },
  "testling": {
    "harness": "mocha-bdd",
    "scripts": [
      "./spec/bind.js",
      "./bower_components/jquery/dist/jquery.js"
    ],
    "files": "./spec/controls-spec.coffee"
  },
  "dependencies": {},
  "devDependencies": {
    "brfs": "^1.2.0",
    "browserify": "^5.9.1",
    "chai": "^1.9.1",
    "coffeeify": "^0.7.0",
    "coffeelint": "^1.5.6",
    "jquery": "^2.1.1",
    "mocha": "^1.21.4",
    "sinon": "^1.10.3",
    "testling": "^1.7.0",
    "watchify": "^1.0.1"
  }
}
