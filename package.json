{
  "name": "controls",
  "private": false,
  "version": "0.0.1",
  "scripts": {
    "build": "browserify ./src/jquery-controls.coffee > ./dist/jq-controls.js",
    "watch": "watchify ./src/jquery-controls.coffee -o ./dist/jq-controls.js",
    "test": "npm run lint && testling",
    "build-test": "browserify ./spec/controls-spec.coffee -o ./spec/jq-controls-spec.js",
    "lint": "coffeelint src/*.coffee"
  },
  "browserify": {
    "basedir": "./",
    "transform": [
      "coffeeify",
      "brfs"
    ]
  },
  "testling": {
    "harness": "mocha-bdd",
    "scripts": [
      "./bower_components/chai/chai.js",
      "./bower_components/sinon/index.js",
      "./bower_components/jquery/dist/jquery.js"
    ],
    "files": "./spec/controls-spec.coffee"
  },
  "dependencies": {
    "chai": "^1.9.1",
    "jquery": "^2.1.1",
    "sinon": "^1.10.3"
  },
  "devDependencies": {
    "brfs": "^1.2.0",
    "browserify": "^5.9.1",
    "coffee-script": "^1.7.1",
    "coffeeify": "^0.7.0",
    "coffeelint": "^1.5.6",
    "istanbul": "^0.3.0",
    "jade": "^1.5.0",
    "testling": "^1.7.0",
    "watchify": "^1.0.1"
  }
}
